<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--navigation style-->
    <style name="navigation_tab_ll_style">
        <item name="android:clickable">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="navigation_tab_rl_style">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="navigation_tab_iv_style">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>


    <!--toolbar style-->

    <style name="toolbar_item_ll_style">
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1.2</item>
        <item name="android:background">@drawable/toolbar_item_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="toolbar_item_btn_style">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>
</resources>
